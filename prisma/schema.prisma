// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Login {
  hash       String   @id
  secureHash String   @unique
  data       Json
  success    Boolean
  validUntil DateTime
}

model Transaction {
  hash       String   @id
  address    String
  did        String
  pubkey     String
  txBodyHex  String
  success    Boolean  @default(false)
  validUntil DateTime
  data       Json?
  timestamp  DateTime
}
